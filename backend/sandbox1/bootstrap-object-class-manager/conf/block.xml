<?xml version="1.0" encoding="ISO-8859-1"?>

<container name="server">

  <classloader>
    <classpath>
      <repository>
        <resource
          id="avalon-framework:avalon-framework-api" 
          version="4.1.5"/>
        <resource
          id="avalon-framework:avalon-framework-impl" 
          version="4.1.5"/>
        <resource
          id="ldapd-common:ldapd-common" 
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:schema-api"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:oid-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-syntax-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-matching-rule-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-attribute-type-manager"
          version="SNAPSHOT"/>
      </repository>
    </classpath>
  </classloader>

  <component 
  	name="bootstrap-syntax-manager" 
    class="ldapd.server.schema.syntax.BootstrapSyntaxManager" />
  <component
    name="bootstrap-matching-rule-manager" 
    class="ldapd.server.schema.matching.BootstrapMatchingRuleManager"/>
  <component
    name="bootstrap-attribute-type-manager"
    class="ldapd.server.schema.attribute.BootstrapAttributeTypeManager"/>
  <component 
  	name="bootstrap-object-class-manager" 
    class="ldapd.server.schema.objectclass.BootstrapObjectClassManager" />

</container>
