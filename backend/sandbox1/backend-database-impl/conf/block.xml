<?xml version="1.0" encoding="ISO-8859-1"?>

<container name="server">

  <classloader>
    <classpath>
      <repository>
        <resource
          id="avalon-framework:avalon-framework-api" 
          version="4.1.5"/>
        <resource
          id="avalon-framework:avalon-framework-impl" 
          version="4.1.5"/>
        <resource
          id="commons-collections:commons-collections" 
          version="2.1"/>
        <resource
          id="jdbm:jdbm"
          version="SNAPSHOT"/>
        <resource
          id="regexp:regexp"
          version="1.2"/>
        <resource
          id="oro:oro"
          version="2.0.7"/>
        <resource
          id="antlr:antlr"
          version="2.7.2"/>
        <resource
          id="ldapd-common:ldapd-common"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:schema-api"
          version="SNAPSHOT"/>
        <resource 
          id="ldapd-server:backend-database-spi" 
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:oid-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:normalizer-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:comparator-registry"
          version="SNAPSHOT"/>
      </repository>
    </classpath>
  </classloader>

  <component
    name="normalizer-registry"
    class="ldapd.server.schema.matching.NormalizerRegistryImpl"/>

  <component
    name="comparator-registry"
    class="ldapd.server.schema.matching.NormalizerRegistryImpl"/>

  <component
    name="oid-registry"
    class="ldapd.server.schema.OidRegistryImpl"/>

  <component
    name="search-engine"
    class="ldapd.server.backend.db.search.DefaultSearchEngine"/>
    
  <!-- Enumerator system -->

  <component
  	name="enumerator"
  	class="ldapd.server.backend.db.search.EnumeratorImpl"/>

  <component
    name="conjunction-enumerator"
    class="ldapd.server.backend.db.search.ConjunctionEnumeratorImpl"/>

  <component
  	name="disjunction-enumerator"
  	class="ldapd.server.backend.db.search.DisjunctionEnumeratorImpl"/>

  <component
  	name="negation-enumerator"
  	class="ldapd.server.backend.db.search.NegationEnumeratorImpl"/>

  <component
  	name="scope-enumerator"
  	class="ldapd.server.backend.db.search.ScopeEnumeratorImpl"/>

  <component
  	name="substring-enumerator"
  	class="ldapd.server.backend.db.search.SubstringEnumeratorImpl"/>

  <!-- Evaluator system -->

  <component
  	name="enumerator"
  	class="ldapd.server.backend.db.search.EnumeratorImpl"/>

  <component
    name="scope-evaluator"
    class="ldapd.server.backend.db.search.ScopeEvaluatorImpl"/>

  <component
    name="substring-evaluator"
    class="ldapd.server.backend.db.search.SubstringEvaluatorImpl"/>

  <component
    name="leaf-evaluator"
    class="ldapd.server.backend.db.search.LeafEvaluatorImpl"/>

</container>
