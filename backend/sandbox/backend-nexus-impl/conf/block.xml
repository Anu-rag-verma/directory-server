<?xml version="1.0" encoding="ISO-8859-1"?>

<container name="server">

  <classloader>
    <classpath>
      <repository>
        <resource
          id="avalon-framework:avalon-framework-api" 
          version="4.1.5"/>
        <resource
          id="avalon-framework:avalon-framework-impl" 
          version="4.1.5"/>
        <resource
          id="commons-collections:commons-collections" 
          version="2.1"/>
        <resource
          id="jdbm:jdbm"
          version="SNAPSHOT"/>
        <resource
          id="regexp:regexp"
          version="1.2"/>
        <resource
          id="oro:oro"
          version="2.0.7"/>
        <resource
          id="antlr:antlr"
          version="2.7.2"/>
        <resource
          id="ldapd-common:ldapd-common"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:schema-api"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:oid-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:normalizer-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:comparator-registry"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-syntax-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-matching-rule-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-attribute-type-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:bootstrap-object-class-manager"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:backend-api"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:backend-database-spi"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:backend-database-impl"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:system-backend-impl"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:backend-nexus-api"
          version="SNAPSHOT"/>
        <resource
          id="ldapd-server:backend-nexus-impl"
          version="SNAPSHOT"/>
       </repository>
       </classpath>
  </classloader>

  <component 
  	name="oid-registry" 
    class="ldapd.server.schema.OidRegistryImpl" />

  <component 
  	name="bootstrap-syntax-manager" 
    class="ldapd.server.schema.syntax.BootstrapSyntaxManager" />

  <component
    name="bootstrap-matching-rule-manager" 
    class="ldapd.server.schema.matching.BootstrapMatchingRuleManager"/>

  <component
    name="bootstrap-attribute-type-manager"
    class="ldapd.server.schema.attribute.BootstrapAttributeTypeManager"/>

  <component
    name="bootstrap-object-class-manager"
    class="ldapd.server.schema.objectclass.BootstrapObjectClassManager"/>

  <component
    name="search-engine"
    class="ldapd.server.backend.db.search.DefaultSearchEngine"/>

  <component
    name="evaluator"
    class="ldapd.server.backend.db.search.EvaluatorImpl"/>

  <component
    name="scope-evaluator"
    class="ldapd.server.backend.db.search.ScopeEvaluatorImpl"/>

  <component
    name="substring-evaluator"
    class="ldapd.server.backend.db.search.SubstringEvaluatorImpl"/>

  <component
    name="leaf-evaluator"
    class="ldapd.server.backend.db.search.LeafEvaluatorImpl"/>

  <component
    name="system-backend" 
    class="ldapd.server.backend.SystemBackend"/>

  <component
    name="backend-nexus" 
    class="ldapd.server.nexus.impl.NexusModule"/>

</container>
