<project>
    <extend>${basedir}/../project.xml</extend>
    <groupId>ldapd-server</groupId>
    <id>system-backend-impl</id>
  
    <name>LDAPd Server System Backend Implementation</name>
    <package>ldapd.server.backend</package>
      <currentVersion>SNAPSHOT</currentVersion>
      <inceptionYear>2002</inceptionYear>
      
      <shortDescription>Server system backend implementation</shortDescription>

      <description>
        The LDAPd Server's System Backend implementation.
      </description>
      
    <dependencies>
        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>backend-api</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforege.net/ldapd-server</url>
        </dependency>
        
        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>schema-api</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforege.net/ldapd-server</url>
        </dependency>
    
        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>oid-registry</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforege.net/ldapd-server</url>
        </dependency>
    
        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>normalizer-registry</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforge.net/ldapd-server</url>
        </dependency>

        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>comparator-registry</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforge.net/ldapd-server</url>
