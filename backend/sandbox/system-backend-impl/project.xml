        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>bootstrap-attribute-type-manager</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforege.net/ldapd-server</url>
        </dependency>
        
        <dependency>
            <groupId>ldapd-server</groupId>
            <artifactId>bootstrap-matching-rule-manager</artifactId>
            <version>SNAPSHOT</version>
            <url>http://ldapd.sourceforege.net/ldapd-server</url>
