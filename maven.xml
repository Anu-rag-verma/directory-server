<project>

  <!-- borrowed this from naming to consolidate all javadocs -->

  <postGoal name="xdoc:copy-resources">  
    <delete includeEmptyDirs="true">
      <fileset dir="${maven.docs.dest}" 
        includes="${maven.xdoc.copy.excludes},${maven.xdoc.copy.excludes.classic}"/>
    </delete>
  </postGoal>
  <postGoal name="xdoc:generate-from-pom">  
    <delete>
      <fileset dir="${maven.gen.docs}" 
        includes="${maven.xdoc.transform.excludes}"/>
    </delete>
  </postGoal>
  <postGoal name="multiproject:site">
    <javadoc destdir="${maven.docs.dest}/apidocs">
      <packageset dir="${basedir}/shared/src/main/java"/>
      <packageset dir="${basedir}/protocol/src/main/java"/>
      <packageset dir="${basedir}/core/src/main/java"/>
      <packageset dir="${basedir}/plugin/src/main/java"/>
      <packageset dir="${basedir}/main/src/main/java"/>
      <classpath>
        <fileset dir="${basedir}">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javadoc>
  </postGoal>
</project>
