<project default="java:compile"
    xmlns:j="jelly:core"
    xmlns:u="jelly:util"
    xmlns:ant="jelly:ant"
    xmlns:maven="jelly:maven"
    xmlns:m="maven"
    xmlns:deploy="deploy">
    
    <preGoal name="site">
        <attainGoal name="docbook:transform"/>
    </preGoal>

    <postGoal name="site">
        <attainGoal name="server:copy-images"/>
    </postGoal>

    <goal name="server:copy-images">
        <copy toDir="target/docs/images">
            <fileSet dir="${basedir}/src/images">
                <include name="*.gif"/>
            </fileSet>
        </copy>
    </goal>
    
    <goal name="cleanall">
        <attainGoal name="clean"/>
        <delete dir="home"/>
    </goal>
    
    <postGoal name="java:compile">
        <attainGoal name="avalon:meta"/>
    </postGoal>
    
    <postGoal name="aspectj:compile">
        <attainGoal name="avalon:meta"/>
    </postGoal>
    
  <goal name="components">
    <j:import inherit="true" uri="components.xml"/>  
  </goal>
</project>
